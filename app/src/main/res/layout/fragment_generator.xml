<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="match_parent"  >
        <AbsoluteLayout
            android:layout_height="729dp"
            android:layout_width="fill_parent"
            >
                    <TextView
                        android:id="@+id/section_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Please Choose Category :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_x="8dp"
                        android:layout_y="10dp"
                        android:id="@+id/textView"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp" />

                    <RadioGroup
                        android:layout_width="315dp"
                        android:layout_height="85dp"
                        android:layout_x="8dp"
                        android:layout_y="40dp"
                        android:orientation="vertical"
                        android:id="@+id/category">

                        <RadioButton
                            android:text="Beginner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/beginner"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="Intermediate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/intermediate"
                            android:layout_weight="1" />
                        <RadioButton
                            android:text="Advanced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/advanced"
                            android:layout_weight="1" />

                    </RadioGroup>



                    <TextView
                        android:text="Style :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_x="8dp"
                        android:layout_y="140dp"
                        android:id="@+id/textView1"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp" />


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_x="8dp"
                        android:layout_y="170dp"
                        android:orientation="horizontal"
                        android:id="@+id/style">

                        <RadioButton
                            android:text="Bodyweight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bodyweight"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="Weights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/weight"
                            android:layout_weight="1" />
                        <RadioButton
                            android:text="Incorporate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/incorporate"
                            android:layout_weight="1" />

                    </RadioGroup>

       <AbsoluteLayout
           android:layout_height="3dp"
           android:layout_width="match_parent"
           android:layout_y="230dp"
           android:background="@android:color/holo_red_dark">
           </AbsoluteLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="154dp"
                android:layout_y="401dp"
                android:foregroundGravity="center"
                android:theme="@style/AppTheme.Custom"
                android:indeterminate="true"
                android:id="@+id/progressBar" />

        </AbsoluteLayout>
        </LinearLayout>>
</ScrollView>
    <AbsoluteLayout

        android:layout_height="wrap_content"
        android:layout_width="373dp"
        android:layout_y="535dp"
        android:layout_x="3dp">

        <Button
            android:text="Generate"

            android:layout_width="368dp"
            android:layout_height="37dp"
            android:id="@+id/button"
            android:background="@android:color/holo_red_dark"
            android:textColor="@android:color/background_light"
            android:fontFamily="sans-serif-medium"
            android:layout_x="8dp"
            android:layout_y="0dp" />
    </AbsoluteLayout>

</AbsoluteLayout>
